<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/p0Primary"
    android:orientation="vertical"
    tools:context="com.redstriped.cyclopenten.questions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textColor="#440027"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/Q1"/>

    <ImageView
        android:layout_width="270px"
        android:layout_height="270px"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/p_0_cesium"
        android:id="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.01"/>

    <Button
        android:id="@+id/answerButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="@color/p0Accent"
        android:text="@string/A_actinium"/>

    <Button
        android:id="@+id/answerButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/answerButton1"
        android:layout_centerHorizontal="true"
        android:background="@color/p0Accent"
        android:text="@string/A_actinium"/>

    <Button
        android:id="@+id/answerButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/answerButton2"
        android:layout_centerHorizontal="true"
        android:background="@color/p0Accent"
        android:text="@string/A_actinium"/>

    <Button
        android:id="@+id/answerButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/answerButton3"
        android:layout_centerHorizontal="true"
        android:background="@color/p0Accent"
        android:text="@string/A_actinium"/>

</LinearLayout>
